<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% comment %}
      Font preloading:
      1. Preconnect to font CDN for faster connection
      2. Preload only the critical font variant (base weight)
      3. Additional variants load on-demand via @font-face
    {% endcomment %}
    {% unless settings.type_primary_font.system? %}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

      {% comment %} Preload the base font variant for initial page render {% endcomment %}
      {{ settings.type_primary_font | font_url | preload_tag: as: 'font', crossorigin: 'anonymous' }}
    {% endunless %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Tailwind CSS %}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              'steadro-primary': '{{ settings.steadro_primary }}',
              'steadro-accent-a': '{{ settings.steadro_accent_a }}',
              'steadro-accent-b': '{{ settings.steadro_accent_b }}',
              'steadro-bg-light': '{{ settings.steadro_bg_light }}',
              'steadro-bg-elevated': '{{ settings.steadro_bg_elevated }}',
              'steadro-border': '{{ settings.steadro_border }}',
              'steadro-text-strong': '{{ settings.steadro_text_strong }}',
              'steadro-text-medium': '{{ settings.steadro_text_medium }}',
              'steadro-text-soft': '{{ settings.steadro_text_soft }}',
              'steadro-dark-base': '{{ settings.steadro_dark_base }}',
              'steadro-dark-elevated': '{{ settings.steadro_dark_elevated }}',
              'steadro-dark-text-primary': '{{ settings.steadro_dark_text_primary }}',
              'steadro-dark-text-secondary': '{{ settings.steadro_dark_text_secondary }}',
              'steadro-success': '{{ settings.steadro_success }}',
              'steadro-error': '{{ settings.steadro_error }}'
            }
          }
        }
      }
    </script>

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
