{%- comment -%}
  Hero section for homepage with headline, subheading, and CTA button.
  Supports optional background image or solid color background.
{%- endcomment -%}

<section class="hero" {{ section.shopify_attributes }}>
  {%- if section.settings.background_image -%}
    <div class="hero__background">
      {{- section.settings.background_image 
        | image_url: width: 2000 
        | image_tag: 
          loading: 'eager',
          widths: '800, 1200, 1600, 2000',
          sizes: '100vw',
          class: 'hero__background-image'
      -}}
    </div>
  {%- endif -%}

  <div class="hero__container">
    <div class="hero__content">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="hero__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.cta_text != blank and section.settings.cta_link != blank -%}
        <div class="hero__cta">
          <a href="{{ section.settings.cta_link }}" class="hero__button">
            {{ section.settings.cta_text }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    min-height: 500px;
    padding: var(--spacing-2xl) 0;
    background-color: var(--color-background);
    overflow: hidden;
  }

  /* Background Image Overlay */
  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero__background::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
  }

  .hero__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Content Container */
  .hero__container {
    position: relative;
    z-index: 1;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
    width: 100%;
  }

  .hero__content {
    max-width: 600px;
  }

  /* Typography */
  .hero__heading {
    font-family: var(--font-heading);
    font-size: var(--font-size-h1);
    font-weight: var(--font-weight-bold);
    line-height: 1.1;
    margin-bottom: var(--spacing-md);
    color: var(--color-foreground);
  }

  .hero__subheading {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
    color: var(--color-foreground);
    opacity: 0.9;
  }

  /* CTA Button */
  .hero__cta {
    display: flex;
    gap: var(--spacing-sm);
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-sm) var(--spacing-lg);
    background: var(--color-accent);
    color: #fff;
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    border-radius: var(--radius-button);
    transition: background-color var(--transition-fast);
    font-size: 1.125rem;
  }

  .hero__button:hover {
    background: var(--color-accent-hover);
    color: #fff;
  }

  /* When background image exists, make text white */
  .hero:has(.hero__background) .hero__heading,
  .hero:has(.hero__background) .hero__subheading {
    color: #fff;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .hero {
      min-height: 600px;
      padding: var(--spacing-2xl) 0;
    }

    .hero__content {
      max-width: 700px;
    }

    .hero__subheading {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      min-height: 70vh;
    }

    .hero__content {
      max-width: 800px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "We Build Shopify Stores That Convert"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Partner with experts who understand e-commerce. We create beautiful, high-performing Shopify stores that drive results."
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended: 2000x1200px. Text will be white with dark overlay."
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
