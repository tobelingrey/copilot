  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary",
        "info": "Used for body text and paragraphs"
      },
      {
        "type": "font_picker",
        "id": "type_heading_font",
        "default": "work_sans_n6",
        "label": "Heading font",
        "info": "Used for H1, H2, H3, H4, H5, H6"
      },
      {
        "type": "header",
        "content": "Font Sizes"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base font size",
        "default": 16,
        "info": "Body text size"
      },
      {
        "type": "range",
        "id": "font_size_h1",
        "min": 32,
        "max": 72,
        "step": 2,
        "unit": "px",
        "label": "H1 size",
        "default": 48
      },
      {
        "type": "range",
        "id": "font_size_h2",
        "min": 24,
        "max": 56,
        "step": 2,
        "unit": "px",
        "label": "H2 size",
        "default": 36
      },
      {
        "type": "range",
        "id": "font_size_h3",
        "min": 20,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "H3 size",
        "default": 28
      },
      {
        "type": "range",
        "id": "font_size_h4",
        "min": 16,
        "max": 32,
        "step": 2,
        "unit": "px",
        "label": "H4 size",
        "default": 22
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
